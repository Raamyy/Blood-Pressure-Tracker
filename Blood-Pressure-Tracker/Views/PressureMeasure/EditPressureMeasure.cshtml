@model Blood_Pressure_Tracker.View_Models.EditPressureMeasureViewModel


@{
    ViewBag.Title = "EditPressureMeasure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditPressureMeasure", "PressureMeasure", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <h2 class="col-sm-10">Edit pressure measure</h2>
            <div class="btn-group btn-group-justified col-sm-2 float-right">
                <button type="button" class="btn btn-outline-primary"
                        onclick="location.href = '@Url.Action("Index", "Home")'">
                    Back
                </button>
            </div>
        </div>
    </div>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = true })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Systole, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Systole, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Diastole, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Diastole, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save Changes" />
        </div>
    </div>

}

